<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:text="ĐÁNH GIÁ MÔN HỌC"

        android:id="@+id/timetable"
        android:layout_width="fill_parent"

        android:textColor="#FFFFFF"
        android:layout_height="53dp"
        android:layout_marginLeft="0dp"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#85C75B"

        />


    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FF6767"
        android:layout_marginTop="0dp"
        android:id="@+id/monday_info"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="70dp"

        android:weightSum="1">
        <TextView
            android:text="CẤU TRÚC DỮ LIỆU VÀ GIẢI THUẬT"
            android:layout_marginTop="25dp"
            android:id="@+id/monhoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:textColor="#FFFFFF"

            android:layout_marginRight="20px" />
        <TextView
            android:text="302GD3"
            android:id="@+id/Class"
            android:layout_width="70dp"
            android:textColor="#FF9933"
            android:layout_height="wrap_content"
            android:paddingBottom="15px"
            android:paddingTop="15px"
            android:background="#ffffff"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"

            android:gravity="center"

            />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="#CC6767">
    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có thích ăn rau cmn rền không?? Tai sao lai khong?"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15px"


        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vote"
        android:progress="20"/>


</LinearLayout>


</LinearLayout>

