<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    android:weightSum="1">





    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/monday_info"
        android:background="#FF6767"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:text="CẤU TRÚC DỮ LIỆU GIẢI THUẬT"

            android:id="@+id/monhoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:text="302GD3"
            android:id="@+id/Class"
            android:layout_width="wrap_content"
            android:textColor="#FF9933"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:padding="5dp"
            android:background="#ffffff"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_margin="5dp"


            />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="#CC6767"
                >
                <TextView
                    android:id="@+id/question16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kết quả học tập của người học được đánh giá bằng nhiều hình thức phù hợp với tính chất và đặc thù môn học"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15px"



                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"

                    >

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/vote"


                    android:clickable="false" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="0"
                        android:id="@+id/text16"
                        android:textColor="#ffffff"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:orientation="vertical"
                android:background="#CC6767">
                <TextView
                    android:id="@+id/question17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text= "Nội dung kiểm tra đánh giá tổng hợp được các kiến thức và kĩ năng mà người học phải đạt được theo yêu cầu"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15px"


                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/vote2"
                  />
                 <TextView
                     android:id="@+id/text17"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="0.2"
                     android:text="0"
                     android:textColor="#ffffff"/>
                 </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:background="#CC6767">
                <TextView
                    android:id="@+id/question18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text= "Giảng đường đáp ứng nhu cầu của môn học"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15px"


                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <SeekBar
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:id="@+id/vote3"
                        />
                    <TextView
                        android:id="@+id/text18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="0"
                        android:textColor="#ffffff"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:background="#CC6767">
            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_button"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:text="Hoàn thành"/>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#CC6767"
        ></LinearLayout>


</LinearLayout>

